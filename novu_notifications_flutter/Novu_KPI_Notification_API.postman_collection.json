{
  "info": {
    "_postman_id": "novu-kpi-collection-001",
    "name": "Novu Notification KPI API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for Novu Notification KPI/statistics API"
  },
  "item": [
    {
      "name": "Get Notification KPIs",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}",
            "type": "text"
          },
          {
            "key": "Novu-Environment-Id",
            "value": "{{environmentId}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/notifications/kpi",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "notifications",
            "kpi"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "authToken",
      "value": "YOUR_TOKEN_HERE"
    },
    {
      "key": "environmentId",
      "value": "YOUR_ENVIRONMENT_ID_HERE"
    }
  ]
} 
